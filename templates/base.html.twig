<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
        {% endblock %}

    </head>
    <header>
        <div class="logo">
            <a href="{{ path('sortie_home') }}"><img src="{{ asset('img/Sortir_logo.png') }}" alt="Sortir.com"></a>
        </div>
        <nav>
            {% if app.user.administrateur == true %}
                <a href="#" title="Villes">Villes</a>
                <a href="#" title="login">Campus</a>
            {% endif %}

            <a href="{{ path('sortie_home') }}" title="Accueil">Accueil</a>
            <a href="#" title="Mon profil">Mon profil</a>
            <a href="{{ path('app_logout') }}" title="Logout">Se deconnecter</a>
        </nav>
    </header>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
