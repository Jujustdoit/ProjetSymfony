{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Affichage d'une sortie{% endblock %}

{% block body %}

    <div class="container">
        <h3>Afficher une sortie</h3>

        <div>

            <p>
                Nom de la sortie : {{ sortie.nom }}
            </p>
            <p>
                Date et heure de la sortie : {{ sortie.dateHeureDebut|date('d/m/Y h:i') }}
            </p>
            <p>
                Date limite d'inscription : {{ sortie.dateLimiteInscription|date('d/m/Y') }}
            </p>
            <p>
                Nombre de places : {{ sortie.participants|length }}/{{ sortie.nbInscriptionsMax }}
            </p>
            <p>
                Dur√©e : {{ sortie.duree }} minutes
            </p>
            <p>
                Description et infos : {{ sortie.infosSortie }}
            </p>
            <p>
                Campus : {{ sortie.campus.nom }}
            </p>
            <p>
                Lieu : {{ sortie.lieu.nom }}
            </p>
            <p>
                Rue : {{ sortie.lieu.rue }}
            </p>
            <p>
                Code postal : {{ sortie.lieu.ville.codePostal }}
            </p>
            <p>
                Latitude : {{ sortie.lieu.latitude }}
            </p>
            <p>
                Longitude : {{ sortie.lieu.longitude }}
            </p>

        </div>

        <div>
            <h3>Liste des participants inscrits :</h3>

            <table class="table">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Nom</th>
                </tr>
                </thead>
                <tbody>
                    {% for participant in participants %}
                        <tr>
                            <td>{{ participant.pseudo }}</td>
                            <td>{{ participant.nom }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}



