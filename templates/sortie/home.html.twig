{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Accueil{% endblock %}

{% block stylesheets %}
    {{ parent() }} |
    <script src="{{ asset('js/filters.js') }}" ></script>

{% endblock %}

{% block body_content %}
        <div class="infoDateUser">
            <p>Date du jour : {{ "now"|date("d-m-Y") }}</p>
            <p>Participant : {{ app.user.pseudo }}</p>
        </div>

        <h2>Filtrer les sorties</h2>
        <div class = "filters-container" style="text-align: center">
            <button  class="mobile-display" onclick="toggleFilters()">Filtres</button>
            <div id ="filter-bar" >
                {{ form_start(criteres) }}
                 <div>
                    {{ form_label(criteres.campus) }}
                    {{ form_widget(criteres.campus) }}
                 </div>
                <div>
                    {{ form_label(criteres.nomSortie) }}
                    {{ form_widget(criteres.nomSortie) }}
                 </div>
                <div>
                    {{ form_label(criteres.dateMin) }}
                    {{ form_widget(criteres.dateMin) }}
                 </div>
                <div>
                    {{ form_label(criteres.dateMax) }}
                    {{ form_widget(criteres.dateMax) }}
                 </div>
                <div>
                    {{ form_label(criteres.organisateur) }}
                    {{ form_widget(criteres.organisateur) }}
                 </div>
                <div>
                    {{ form_label(criteres.inscrit) }}
                    {{ form_widget(criteres.inscrit) }}
                 </div>
                <div>
                    {{ form_label(criteres.pasInscrit) }}
                    {{ form_widget(criteres.pasInscrit) }}
                 </div>
                <div>
                    {{ form_label(criteres.sortiesPassees) }}
                    {{ form_widget(criteres.sortiesPassees) }}
                 </div>
                <div>
                    {{ form_label(criteres.recherche) }}
                    {{ form_widget(criteres.recherche) }}
                 </div>

                {{ form_end(criteres) }}
            </div>
        </div>




        <table class="table">
            <thead>
            <tr>
                <th class="mobile-display-only" >Nom de la sortie</th>
                <th class="mobile-display">Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th class="mobile-display" >Clôture</th>
                <th class="mobile-display" >Inscrits/places</th>
                <th class="mobile-display" >Etat</th>
                <th class="mobile-display" >Inscrit</th>
                <th class="mobile-display" >Organisateur</th>
                <th class="mobile-display" >Actions</th>
                <th class="mobile-display-only" >Lieu</th>

            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr>
                    <td class="mobile-display">{{ sortie.nom }}</td>
                    <td class="mobile-display-only">{% if (sortie.etat.libelle) != "Annulée" %}
                        <a href="{{ path('sortie_show', {'id': sortie.id }) }}">{{ sortie.nom }}</a>
                    </td>
                    {% endif %}
                    <td>{{ sortie.dateHeureDebut|date('d/m/Y h:i') }}</td>
                    <td class="mobile-display" >{{ sortie.dateLimiteInscription|date('d/m/Y') }}</td>
                    <td class="mobile-display" >{{ sortie.participants|length }}/{{ sortie.nbInscriptionsMax }}</td>
                    <td class="mobile-display" >
                        {{ sortie.etat.libelle }}
                        {% if sortie.etat.libelle == "Annulée" %}
                            - {{ sortie.infosSortie }}
                        {% endif %}
                    </td>
                    <td class="mobile-display" >
                        {% if app.user in sortie.participants %}
                            X
                        {% endif %}
                    </td>
                    <td class="mobile-display" >
                        <a href="{{ path("profile_details",{'id' :sortie.organisateur.id} )}}">{{ sortie.organisateur.nom }}</a>
                    </td>
                    <td class="mobile-display" >
                        {% if (sortie.etat.libelle) != "Annulée" %}
                            <a href="{{ path('sortie_show', {'id': sortie.id }) }}">Afficher</a>
                        {% endif %}

                        {% if (sortie.etat.libelle == 'Ouverte')%}
                            - <a href="{{ path('sortie_inscription', {'idSortie':sortie.id}) }}">S'inscrire</a>
                        {% endif %}

                        {% if (sortie.etat.libelle == 'Ouverte') or (sortie.etat.libelle == 'Clôturée') %}

                            {% if app.user in sortie.participants %}
                                - <a href="{{ path('sortie_desinscription', {'idSortie':sortie.id}) }}">Se désister</a>
                            {% endif %}

                        {% endif %}

                        {% if app.user.email == sortie.organisateur.email %}
                            {% if sortie.etat.libelle == 'Créée' %}
                                <a href="{{ path('sortie_update', {'id': sortie.id }) }}">Modifier</a>
                                - <a href="{{ path('sortie_update', {'id': sortie.id }) }}">Publier</a>
                            {% endif %}
                            {% if ( sortie.etat.libelle == 'Ouverte') and (sortie.dateLimiteInscription > date()) %}
                                - <a href="{{ path('sortie_annulation', {'id': sortie.id }) }}">Annuler</a>
                            {% endif %}
                        {% endif %}
                    </td>
                    <td  class="mobile-display-only" >{{ sortie.lieu.nom }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

         <div class="center-div" style="text-align: center">
             <a class="mobile-display" href="{{ path('sortie_create') }}"><button>Créer une sortie</button></a>
         </div>


{% endblock %}
